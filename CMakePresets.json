{
	"version": 4,
	"configurePresets": [
		{
			"hidden": true,
			"name": "default-presets",
			"generator": "Ninja",
			"warnings": {
				"dev": false,
				"uninitialized": false
			},
			"binaryDir": "${sourceParentDir}/build/${presetName}"
		},
		{
			"hidden": true,
			"name": "system-default-presets",
			"inherits": [
				"default-presets"
			],
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"hidden": true,
			"name": "debug-presets",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_VERBOSE_MAKEFILE": "TRUE",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
			}
		},
		{
			"hidden": true,
			"name": "release-presets",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_VERBOSE_MAKEFILE": "FALSE",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
			}
		},
		{
			"hidden": true,
			"name": "relwithdebinfo-presets",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo",
				"CMAKE_VERBOSE_MAKEFILE": "FALSE",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
			}
		},
		{
			"hidden": true,
			"name": "vcpkg-default-presets",
			"inherits": [
				"default-presets"
			],
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
				"VCPKG_TARGET_TRIPLET": "x64-arm64-linux-windows-osx-static-md"
			}
		},
		{
			"hidden": true,
			"name": "system-clang-presets",
			"cacheVariables": {
				"CMAKE_C_COMPILER"  : "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"hidden": true,
			"name": "sourcetrail-presets",
			"cacheVariables": {
				"BUILD_CXX_LANGUAGE_PACKAGE": "ON",
				"BUILD_JAVA_LANGUAGE_PACKAGE": "ON",
				"BUILD_UNIT_TESTS_PACKAGE": "ON"
			}
		},



		{
			"name": "system-debug",
			"inherits": [
				"debug-presets",
				"system-default-presets",
				"sourcetrail-presets"
			]
		},
		{
			"name": "system-release",
			"inherits": [
				"release-presets",
				"system-default-presets",
				"sourcetrail-presets"
			]
		},
		{
			"name": "system-relwithdebinfo",
			"inherits": [
				"relwithdebinfo-presets",
				"system-default-presets",
				"sourcetrail-presets"
			]
		},
		{
			"name": "system-clang-debug",
			"inherits": [
				"system-debug",
				"system-clang-presets"
			]
		},
		{
			"name": "system-clang-release",
			"inherits": [
				"system-release",
				"system-clang-presets"
			]
		},
		{
			"name": "system-clang-relwithdebinfo",
			"inherits": [
				"system-relwithdebinfo",
				"system-clang-presets"
			]
		},



		{
			"name": "vcpkg-debug",
			"inherits": [
				"debug-presets",
				"vcpkg-default-presets",
				"sourcetrail-presets"
			]
		},
		{
			"name": "vcpkg-release",
			"inherits": [
				"release-presets",
				"vcpkg-default-presets",
				"sourcetrail-presets"
			]
		},
		{
			"name": "vcpkg-relwithdebinfo",
			"inherits": [
				"relwithdebinfo-presets",
				"vcpkg-default-presets",
				"sourcetrail-presets"
			]
		},
		{
			"name": "vcpkg-clang-debug",
			"inherits": [
				"vcpkg-debug",
				"system-clang-presets"
			]
		},
		{
			"name": "vcpkg-clang-release",
			"inherits": [
				"vcpkg-release",
				"system-clang-presets"
			]
		},
		{
			"name": "vcpkg-clang-relwithdebinfo",
			"inherits": [
				"vcpkg-relwithdebinfo",
				"system-clang-presets"
			]
		}
	]
}
